{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core"],
  "javascript": {
    "globals": ["jest", "describe", "it", "expect", "beforeEach"]
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["src/**/*", "test/**/*"]
  },
  "overrides": [
    {
      "includes": ["test/**/*"],
      "linter": {
        "rules": {
          "style": {
            "noMagicNumbers": "off"
          }
        }
      }
    }
  ]
}
